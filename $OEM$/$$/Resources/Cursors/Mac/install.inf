text		= "Text.cur"
hand		= "Handwriting.cur"
unavailiable	= "NO.cur"
vert		= "Vertical.cur"
horz		= "Horizontal.cur"
dgn1		= "Diagonal Resize 1.cur"
dgn2		= "Diagonal Resize 2.cur"
move		= "Move.cur"
alternate	= "Alternate Select.cur"
link		= "Link Select.cur"